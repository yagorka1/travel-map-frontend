{
  "name": "travel-map-frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/travel-map-frontend/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/travel-map-frontend",
        "index": "apps/travel-map-frontend/src/index.html",
        "main": "apps/travel-map-frontend/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/travel-map-frontend/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "input": "apps/travel-map-frontend/src/assets",
            "glob": "**/*",
            "output": "assets"
          },
          {
            "input": "apps/travel-map-frontend/public",
            "glob": "favicon.png",
            "output": "./"
          }
        ],
        "styles": ["apps/travel-map-frontend/src/styles.css"]
      },
      "configurations": {
        "production": {
          "fileReplacements": [
            {
              "replace": "environments/environment.ts",
              "with": "environments/environment.prod.ts"
            }
          ],
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all",
          "allowedCommonJsDependencies": ["leaflet", "leaflet-ant-path"]
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "travel-map-frontend:build:production"
        },
        "development": {
          "buildTarget": "travel-map-frontend:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "travel-map-frontend:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/travel-map-frontend/jest.config.ts",
        "tsConfig": "apps/travel-map-frontend/tsconfig.spec.json"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "travel-map-frontend:build",
        "port": 4200,
        "spa": true
      }
    }
  }
}
